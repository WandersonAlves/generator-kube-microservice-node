{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
        "src/**/*.spec.ts",
        "src/shared/class/AbstractController.ts",
        "src/index.ts",
        "src/shared/server/middlewares/exception.ts"
      ]
    },
    "jsRules": {},
    "rules": {
      "quotemark": false,
      "one-line": false,
      "no-angle-bracket-type-assertion": false,
      "ordered-imports": false,
      "object-literal-sort-keys": false,
      "trailing-comma": false,
      "max-line-length": {
        "options":{
          "limit": 130
        }
      },
      "arrow-parens": false,
      "variable-name": {
        "options": ["allow-leading-underscore"]
      },
      "member-access": {
        "options": ["no-public"]
      },
      "no-unused-expression": true,
      "import-spacing": true,
      "no-require-imports": true,
      "interface-name": false
    },
    "rulesDirectory": []
}